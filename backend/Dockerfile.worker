FROM node:22-slim AS builder

WORKDIR /app

COPY package.json ./
COPY pnpm-lock.yaml* ./

RUN npm install -g pnpm && pnpm install

COPY . .

ENV NODE_OPTIONS=--max_old_space_size=3072
RUN pnpm build

FROM node:22-slim

WORKDIR /app

COPY package.json ./
COPY pnpm-lock.yaml* ./

RUN npm install -g pnpm && pnpm install --prod

COPY --from=builder /app/dist ./dist

CMD ["node", "dist/src/worker"]
